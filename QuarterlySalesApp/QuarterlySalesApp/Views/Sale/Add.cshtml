@model Sale

@{
	ViewBag.Title = "Add Sales";
}

@section Scripts {
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<h2 class="mt-3 mx-3">@ViewBag.Title</h2>
<form asp-action="Add" method="post">
	<div class="row mb-3 mx-1">
		<label asp-for="Quarter" class="col-form-label col-md-2">Quarter:</label>
		<div class="col-md-4">
			<input asp-for="Quarter" class="form-control" />
		</div>
		<div class="col">
			<span asp-validation-for="Quarter" class="text-danger"></span>
		</div>
	</div>
	<div class="row mb-3 mx-1">
		<label asp-for="Year" class="col-form-label col-md-2">Year:</label>
		<div class="col-md-4">
			<input asp-for="Year" class="form-control" />
		</div>
		<div class="col">
			<span asp-validation-for="Year" class="text-danger"></span>
		</div>
	</div>
	<div class="row mb-3 mx-1">
		<label asp-for="Amount" class="col-form-label col-md-2">Amount:</label>
		<div class="col-md-4">
			<input asp-for="Amount" class="form-control" />
		</div>
		<div class="col">
			<span asp-validation-for="Amount" class="text-danger"></span>
		</div>
	</div>
	<div class="row mb-3 mx-1">
		<label asp-for="EmployeeId" class="col-form-label col-md-2">Employee:</label>
		<div class="col-md-4">
			<select asp-for="EmployeeId" asp-items="@(new SelectList (ViewBag.Employees, "EmployeeId", "Name"))" class="form-select">
				<option value="0">Select an employee...</option>
			</select>
		</div>
		<div class="col">
			<span asp-validation-for="EmployeeId" class="text-danger"></span>
		</div>
	</div>
	
	<div class="row">
		<div class="offset-md-2 col">
			<button type="submit" class="btn btn-primary">Save</button>
			<a asp-controller="Home" asp-action="Index" class="btn btn-primary">Cancel</a>
		</div>
	</div>
</form>
@{
    string controller =
        ViewContext.RouteData.Values["controller"].ToString();
    string action =
        ViewContext.RouteData.Values["action"].ToString();
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SalesOrderApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVCHOT2.styles.css" asp-append-version="true" />
</head>
<header>
    <nav class="navbar navbar-expand-md navbar-dark bg-primary">
            <a class="navbar-brand" href="/">Sales Order - Admin</a>
            <button class="navbar-toggler" type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <nav class="collapse navbar-collapse" id="navbarSupportedContent">
                <div class="navbar-nav me-auto">
                    <a class="nav-link
                      @(controller == "Home" && action == "Index" ? "active" : "")"
                        asp-controller="Home" asp-action="Index">Admin</a>
                    <a class="nav-link
                      @(controller == "Product" ? "active" : "")"
                       asp-controller="Product" asp-action="List">Products</a>
                    <a class="nav-link
                      @(controller == "Category" ? "active" : "")"
                        asp-controller="Category" asp-action="List">Categories</a>
                    <a class="nav-link
                      @(controller == "Customer" ? "active" : "")"
                       asp-controller="Customer" asp-action="List">Customer</a>
                </div>
                <div class="navbar-nav navbar-right">
                    <a class="nav-link"
                       asp-area="" asp-controller="Home" asp-action="Index">View Site</a>
                </div>
            </nav>
    </nav>
</header>
<main>
    @RenderBody()
</main>

@section scripts{
    @RenderSection("scripts", required:false)
}
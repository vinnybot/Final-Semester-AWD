@model List<Customer>

@{
    ViewData["Title"] = "Customer Manager - Sales Order App";
}

<header class="mx-3 mt-3">
    <div>
        <h1>
            Customer Manager
        </h1>
    </div>
</header>

<table class="table table-bordered mx-3">
    <thead>
        <tr>
            <th>Name</th>
            <th>Last Name</th>
            <th>Phone Number</th>
            <th>State</th>
            <th>City</th>
            <th>Street Address</th>
            <th>Zip Code</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.CustomerFirstName</td>
                <td>@customer.CustomerLastName</td>
                <td>@customer.CustomerPhoneNumber</td>
                <td>@customer.CustomerState</td>
                <td>@customer.CustomerCity</td>
                <td>@customer.CustomerStreetAddress</td>
                <td>@customer.CustomerZipCode</td>
                <td><a asp-controller="Customer" asp-action="Edit" asp-route-id="@customer.CustomerID" class="btn btn-dark">Edit</a></td>
                <td><a asp-controller="Customer" asp-action="Delete" asp-route-id="@customer.CustomerID" class="btn btn-dark">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Add" class="btn btn-primary">Add New Product</a>
</div>

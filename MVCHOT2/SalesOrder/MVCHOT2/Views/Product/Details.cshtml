@model Product

@{
    ViewData["Title"] = "Product Details";
    Layout = "_Layout";
}

<h1>Product Details</h1>
<div class="row">
    <div class="col-md-4">
        <img src="../images/@ViewBag.ImageFilename" alt="@Model.ProductName Image" class="img-responsive center-block" />
    </div>

    <div class="col-md-8">
        <h2>@Model.ProductName</h2>
        <table class="table table-bordered table-striped">
            <tr>
                <td>Description: </td>
                <td>@Model.ProductDescLong</td>
            </tr>
            <tr>
                <td>Price:</td>
                <td>$@Model.ProductPrice</td></>
            </tr>
        </table>
        <a asp-controller="Cart" asp-action="Add" asp-route-id="@Model.Slug" class="btn btn-primary">Add to Cart</a>
    </div>
</div>
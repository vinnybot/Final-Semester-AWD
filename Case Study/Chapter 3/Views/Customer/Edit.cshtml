@model Customer

@{
    string title = ViewBag.Action + " Customer";
    ViewData["Title"] = title;
    Layout = "_Layout";
}

<h2 class="mx-3 mt-3">@ViewBag.Title</h2>

<form asp-action="Edit" method="post">

    <div class="mb-3 mx-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control" />
        <div class="col">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 mx-3">
        <label asp-for="Address" class="form-label">Address</label>
        <input asp-for="Address" class="form-control" />
        <div class="col">
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 mx-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control" />
        <div class="col">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 mx-3">
        <label asp-for="City" class="form-label">City</label>
        <input asp-for="City" class="form-control" />
        <div class="col">
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 mx-3">
        <label asp-for="State" class="form-label">State</label>
        <input asp-for="State" class="form-control" />
        <div class="col">
            <span asp-validation-for="State" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 mx-3">
        <label asp-for="PostalCode" class="form-label">Postal Code</label>
        <input asp-for="PostalCode" class="form-control" />
        <div class="col">
            <span asp-validation-for="PostalCode" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 mx-3">
        <label asp-for="CountryId" class="form-label">Country</label>
        <select asp-for="CountryId" asp-items=@(new SelectList(ViewBag.Countries, "CountryId", "Name")) class="form-select">
            <option value="0">Select a Country . . . </option>
        </select>
        <span asp-validation-for="CountryId" class="text-danger"></span>
    </div>

    <div class="mb-3 mx-3">
        <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
        <input asp-for="PhoneNumber" class="form-control" />
        <div class="col">
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
    </div>

    <input type="hidden" asp-for="CustomerId" />

    <div class="mx-3 me-1">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-controller="Customer" asp-action="List" class="btn btn-secondary">Cancel</a>
    </div>
</form>
@model Customer

@{
    string title = ViewBag.Action + " Customer";
    ViewData["Title"] = title;
    Layout = "_Layout";
}

<h2 class="mx-3 mt-3">@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3 mx-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="mb-3 mx-3">
        <label asp-for="Address" class="form-label">Address</label>
        <input asp-for="Address" class="form-control" />
    </div>

    <div class="mb-3 mx-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="mb-3 mx-3">
        <label asp-for="City" class="form-label">City</label>
        <input asp-for="City" class="form-control" />
    </div>

    <div class="mb-3 mx-3">
        <label asp-for="State" class="form-label">State</label>
        <input asp-for="State" class="form-control" />
    </div>

    <div class="mb-3 mx-3">
        <label asp-for="PostalCode" class="form-label">Postal Code</label>
        <input asp-for="PostalCode" class="form-control" />
    </div>

    <div class="mb-3 mx-3">
        <label asp-for="CountryId" class="form-label">Country</label>
        <select asp-for="CountryId" class="form-select">
            <option value="">Select a Country</option>
        @foreach(Country c in ViewBag.Countries)
        {
            <option value="@c.CountryId">@c.Name</option>
        }
        </select>
    </div>

    <div class="mb-3 mx-3">
        <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>

    <input type="hidden" asp-for="CustomerId" />

    <div class="mx-3 me-1">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-controller="Customer" asp-action="List" class="btn btn-secondary">Cancel</a>
    </div>
</form>
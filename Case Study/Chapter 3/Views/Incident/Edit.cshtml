@model Incident

@{
    string title = ViewBag.Action + " Incident";
    ViewData["Title"] = title;
    Layout = "_Layout";
}

<h2 class="mx-3 mt-3">@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3 mx-3">
        <label asp-for="CustomerId" class="form-label">Customer</label>
        <select asp-for="CustomerId" class="form-select">
            <option value="">Select a Customer</option>
            @foreach(Customer c in ViewBag.Customer)
            {
                <option value="@c.CustomerId">@c.Name</option>
            }
        </select>
    </div>

    <div class="mb-3 mx-3">
        <label asp-for="Product" class="form-label">Product</label>
        <select asp-for="ProductId" class="form-select">
            <option value="">Select a Product</option>
            @foreach(Product p in ViewBag.Products)
            {
                <option value="@p.ProductId">@p.Name</option>
            }
        </select>
    </div>

    <div class="mb-3 mx-3">
        <label asp-for="Title" class="form-label">Title</label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="mb-3 mx-3">
        <label asp-for="Description" class="form-label">Description</label>
        <input asp-for="Description" class="form-control" />
    </div>

    <div class="mb-3 mx-3">
        <label asp-for="Technician" class="form-label">Technician</label>
        <select asp-for="TechnicianId" class="form-select">
            <option value="">Select a Technician</option>
            @foreach(Technician t in ViewBag.Technicians)
            {
                <option value="@t.TechnicianId">@t.Name</option>
            }
        </select>
    </div>

    <div class="mb-3 mx-3">
        <label asp-for="DateOpened" class="form-label">Date Opened</label>
        <input asp-for="DateOpened" class="form-control" />
    </div>

    <input type="hidden" asp-for="IncidentId" />

    <div class="mx-3 me-1">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-controller="Incident" asp-action="List" class="btn btn-secondary">Cancel</a>
    </div>
</form>
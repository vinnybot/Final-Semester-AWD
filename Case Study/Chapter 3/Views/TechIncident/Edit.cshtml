@model TechIncidentViewModel

@{
    ViewBag.Title = "Edit Incident";
    Layout = "_Layout";
}

@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<h1>@ViewBag.Title</h1>

<form asp-action="Edit" method="post">
    <div class="row mb-1">
        <label class="col-form-label col-md-3">Technician</label>
        <div class="col">
            <label>@Model.Technician.Name</label>
        </div>
    </div>

    <div class="row mb-1">
        <label class="col-form-label col-md-3">Customer: </label>
        <div class="col">
            <label>@Model.Incident.Customer.Name</label>
        </div>
    </div>

    <div class="row mb-1">
        <label class="col-form-label col-md-3">Product: </label>
        <div class="col">
            <label>@Model.Incident.Product.Name</label>
        </div>
    </div>

    <div class="row mb-1">
        <label class="col-form-label col-md-3">Title: </label>
        <div class="col">
            <label>@Model.Incident.Title</label>
        </div>
    </div>

    <div class="row mb-1">
        <label class="col-form-label col-md-3">Date Opened </label>
        <div class="col">
            <label>@Model.Incident.DateOpened</label>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-form-label col-md-3">Description: </label>
        <div class="col">
            <textarea asp-for="Incident.Description" class="form-control"></textarea>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-form-label col-md-3">Date Closed: </label>
        <div class="col">
            <input type="text" asp-for="Incident.DateClosed" class="form-control" />
        </div>
    </div>

    <input type="hidden" asp-for="Incident.IncidentId" />

    <div class="row">
        <div class="col">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="List" asp-route-id="@Model.Technician.TechnicianId"
            class="btn btn-primary">Cancel</a>
        </div>
    </div>

</form>
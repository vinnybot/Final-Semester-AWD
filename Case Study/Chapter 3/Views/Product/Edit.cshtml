@model Product

@{
    string title = ViewBag.Action + " Product";
    ViewData["Title"] = title;
    Layout = "_Layout";
}

<h2 class="mx-3 mt-3">@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3 mx-3">
        <label asp-for="Code" class="form-label">Code:</label>
        <input asp-for="Code" class="form-control" />
    </div>

    <div class="mb-3 mx-3">
        <label asp-for="Name" class="form-label">Name:</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="mb-3 mx-3">
        <label asp-for="Price" class="form-label">Price:</label>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="mb-3 mx-3">
        <label asp-for="ReleaseDate" class="form-label">Release Date:</label>
        <input asp-for="ReleaseDate" class="form-control" />
    </div>

    <input type="hidden" asp-for="ProductId" />
    
    <div class="mx-3 me-1">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-controller="Product" asp-action="List" class="btn btn-secondary">Cancel</a>
    </div>
</form>
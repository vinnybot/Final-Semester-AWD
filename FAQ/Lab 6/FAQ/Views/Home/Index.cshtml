@model List<FAQ.Models.FAQs>

@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}

<header class="py-5 text-center text-white mb-4 mt-2 container bg-primary">
    <h1 class="mt-3 mb-4">Frequently Asked Questions</h1>
</header>
<div class="container">
    <nav class="navbar navbar-expand-lg navbar-light">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse d-flex justify-content-center" id="navbarNav">
            <ul class="navbar-nav fs-5">
                <li class="nav-item">
                    <a asp-action="Index" class="nav-item nav-link"
                       asp-route-topic="" asp-route-category="">All FAQs</a>
                </li>
                @foreach (Topic t in ViewBag.Topics)
                {
                    <a asp-action="Index" class="nav-item nav-link"
                   asp-route-topic="@t.TopicId">@t.Name</a>
                }
            </ul>
        </div>
    </nav>
</div>
<div class="container">
    <div class="row">
        <ul class="list-group col-2">
            @foreach (Category c in ViewBag.Categories)
            {
                <li class="list-group-item">
                    <a class="text-decoration-none" asp-action="Index"
                   asp-route-topic="@ViewBag.SelectedTopic"
                   asp-route-category="@c.CategoryId">@c.Name</a>
                </li>
            }
        </ul>
        <div class="card col-9">
            <ul class="list-group list-group-flush">
                @foreach (var faq in Model)
                {
                    <li class="list-group-item list-unstyled">
                        <strong class="me-3 bg-secondary">@faq.Question</strong><span>@faq.Answer</span>
                        <div class="row">
                            <div class="mt-3 col-6">Topic: @faq.Topic.Name</div>
                            <div class="mt-3 col-6">Category: @faq.Category.Name</div>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>

</div>
